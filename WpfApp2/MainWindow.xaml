<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" FontFamily="Candara" Icon="assets/Комфорт.ico" Height="450" Width="800">
    <Grid>
        <Menu Height="37" VerticalAlignment="Top" Background="#D2DFFF">
            <Image Source="assets/Комфорт.png"/>
            <AccessText FontSize="20">
                Комфорт
            </AccessText>
            
        </Menu>

        <TextBlock Name="TitlePage" FontSize="16" Height="30" Width="200" VerticalAlignment="Top" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBlock"/>
        <Frame Name="MainFrame" Margin="10,42,10,42" NavigationUIVisibility="Hidden" ContentRendered="MainFrame_ContentRendered"></Frame>
        
        <Menu Height="37" VerticalAlignment="Bottom" Background="#D2DFFF">
            <AccessText FontSize="18">
                Комфорт
            </AccessText>
        </Menu>
        <Button Name="backBtn" Background="#355CBD" Foreground="White" Content="Назад" HorizontalAlignment="Right" Margin="0,5,10,0" VerticalAlignment="Top" Width="153" Height="27" Click="backBtn_Click"/>
        <Button Name="procedureBtn" Background="#355CBD" Foreground="White" Content="Расчет кол-ва сырья" HorizontalAlignment="Right" Margin="0,5,10,0" VerticalAlignment="Top" Width="153" Height="27" Click="procedureBtn_Click"/>
    </Grid>
</Window>
