<Page x:Class="WpfApp2.DescriptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2"
      mc:Ignorable="d" 
      d:DesignHeight="450" FontFamily="Candara" d:DesignWidth="800"
      Title="DescriptionPage">

    <Grid>
        <DataGrid Name="ProductWorkshopData" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,65,0,0"/>
        <TextBlock x:Name="titleBlock" HorizontalAlignment="Left" Margin="10,18,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" FontSize="18"/>

    </Grid>
</Page>
