<Window x:Class="WpfApp2.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="AddProductWindow" FontFamily="Candara" Icon="assets/Комфорт.ico" Height="450" Width="298">
    <Grid>
        <TextBox x:Name="ArticulBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="266" Height="26"/>
        <ComboBox x:Name="TypeBox" HorizontalAlignment="Center" Margin="0,153,0,0" VerticalAlignment="Top" Width="266" Height="26"/>
        <TextBox x:Name="NameBox" HorizontalAlignment="Center" Margin="0,104,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="266" Height="26"/>
        <TextBox x:Name="MinPriceBox" HorizontalAlignment="Center" Margin="0,260,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="266" Height="26"/>
        <ComboBox x:Name="MaterialBox" HorizontalAlignment="Center" Margin="0,316,0,0" VerticalAlignment="Top" Width="266" Height="26"/>
        <Button Background="#355CBD" Foreground="White" Name="AddName" Content="Добавление" HorizontalAlignment="Center" Margin="0,366,0,0" VerticalAlignment="Top" Width="266" Height="39" Click="AddName_Click"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,44,0,0" TextWrapping="Wrap" Text="Добавление" VerticalAlignment="Top" FontSize="18"/>

    </Grid>
</Window>
